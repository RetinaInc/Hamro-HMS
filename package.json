{
    "name": "Hamro-HMS",
    "version": "0.1.0",
    "description": "Hospital Management System",
    "repository": "git@github.com:sanishmaharjan/Hamro-HMS.git",
    "license": "MIT",
    "NODE_PATH": "./front-end",
    "scripts": {
        "dev": "pm2 start server/process/development.json",
        "production": "pm2 start server/process/production.json",
        "stop-server": "pm2 delete all",
        "log": "pm2 logs",
        "monitor": "pm2 monit",
        "webpack": "webpack -wd",
        "code-format": "prettier --find-config-path --write  'front-end/**/*.js'",
        "build": "webpack -p",
        "test": "NODE_PATH=./front-end jest --notify",
        "test-coverage": "NODE_PATH=./front-end jest --coverage"
    },
    "babel": {
        "presets": [
            "react",
            [
                "env",
                {
                    "targets": {
                        "node": "current"
                    }
                }
            ],
            "stage-2"
        ]
    },
    "jest": {
        "transform": {
            ".*": "jest-css-modules"
        },
        "setupFiles": [
            "raf/polyfill",
            "./.jest.js"
        ],
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ]
    },
    "devDependencies": {
        "babel-eslint": "^8.0.2",
        "eslint": "^4.12.1",
        "eslint-plugin-react": "^7.5.1",
        "jest": "^21.2.1",
        "jest-css-modules": "^1.1.0",
        "prettier": "1.10.2",
        "react-test-renderer": "^16.2.0"
    },
    "dependencies": {
        "axios": "^0.17.1",
        "axios-mock-adapter": "^1.10.0",
        "babel-cli": "^6.26.0",
        "babel-loader": "^7.1.2",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.6.1",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-2": "^6.24.1",
        "bluebird": "^3.5.0",
        "clone-deep": "^0.2.4",
        "coffee-script": "^1.12.5",
        "cookie-parser": "^1.3.5",
        "css-loader": "^0.28.7",
        "dotenv": "^4.0.0",
        "ejs": "^2.5.7",
        "enzyme": "^3.2.0",
        "enzyme-adapter-react-16": "^1.1.0",
        "enzyme-to-json": "^3.2.2",
        "express": "^4.13.1",
        "express-ctrlr": "0.0.3",
        "express-handlebars": "^2.0.1",
        "express-session": "^1.11.3",
        "formidable": "^1.0.17",
        "fs-extra": "^0.22.1",
        "ink-docstrap": "*",
        "lodash": "^4.17.4",
        "lodash.pickby": "^4.6.0",
        "moment": "^2.18.1",
        "pg": "^4.5.6",
        "pg-hstore": "^2.3.2",
        "pm2": "^2.8.0",
        "prop-types": "^15.6.0",
        "raf": "^3.4.0",
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "react-notify": "^3.0.0",
        "react-router-dom": "^4.2.2",
        "sequelize": "^3.30.4",
        "style-loader": "^0.19.0",
        "unit.js": "^2.0.0",
        "webpack": "^3.9.1",
        "winston": "^2.3.1",
        "yarn": "^1.3.2"
    }
}
